	head
		meta(charset='utf-8')
		- var page_title = page_title || ''
		- var page_description = page_description || ''
		title #{page_title} | Jimmy Hillis: blog, music, code
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width')
		link(rel='stylesheet', href='/stylesheets/styles.css')
		//- script(src='/javascripts/libs/modernizr-2.5.3.min.js')
		link(rel='shortcut icon', href='/favicon.ico')
		link(rel='apple-touch-icon-precomposed', href='/images/apple-touch-icon-precomposed.png')
		link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/images/apple-touch-icon-72x72-precomposed.png')
		link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/images/apple-touch-icon-114x114-precomposed.png')
		link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/images/apple-touch-icon-144x144-precomposed.png')
		block facebook
			meta(property='og:title', content='#{page_title}')
			meta(property='og:type', content='article')
			meta(property='og:url', content='#{current_url}')
			meta(property='og:image', content='http://jimmy.hillis.me/images/facebook.png')
			meta(property='og:site_name', content='Jimmy Hillis')
			meta(property='og:description', content='#{page_description}')
			//- <meta property="fb:admins" content="USER_ID" /> -->
	- var body_class = body_class || ''
	body(class=body_class)
		#wrapper
			block header
				block page_title
					header.page-header
						h1.page-title
							a(href='/') jimmy-hillis
						small.page-subtitle Code, music and books... rarely in that order.
				block navigation
					nav.primary-nav.clearfix
						ul.page-navigation
							li
								a.nav-link(href='/') blog
							li
								a.nav-link(href='/music/') music
							li
								a.nav-link(href='/lab/') lab
							li
								a.nav-link(href='/contact/') moi
					nav.social-media
						ul
							li
								a(href='//twitter.com/ppjim3', data-widget='feed-twitter').twitter Twitter
							li
								a(href='//instagr.am/jimmyhillis', data-widget='feed-instagram').instagram Instagram
							li
								a(href='//last.fm/user/ppjim3', data-widget='feed-lastfm').last-fm Last.fm
				- if (user)
					nav.cms-tools
						ul
							li
								a(href='/post') View Posts
							li
								a(href='/post/new/') Add Post
							- if (typeof post != "undefined" && post.name)
								li
									a(href='/post/#{post.name}/edit/') Edit Post

			block copy
				.copy.clearfix !{body}

			block footer
				footer.page-footer
					.colophon
							:markdown
								This website was created using open source software
								including [node.js](//nodejs.org),
								[express](//expressjs.com/), [less](//lesscss.org), and
								[jade](//jade-lang.com). You can see it all on
								[GitHub](//github.com/jimmyhillis/jimmy.hillis.me) too.

		block scripts
			script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')
			script(src='/javascripts/ui-min.js')

